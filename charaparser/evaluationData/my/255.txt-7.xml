            <statement>
                <structure id="o0" name="phyllary">
                    <character char_type="range_value" constraint="in series" constraint_id="o1" from="40" name="count" to="60"/>
                    <character modifier="sparsely" name="pubescence" value="puberulent"/>
                    <character name="pubescence" value="tomentulose"/>
