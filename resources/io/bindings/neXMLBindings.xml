<?xml version="1.0"?>
<xml-bindings
    xmlns="http://www.eclipse.org/eclipselink/xsds/persistence/oxm"
    package-name="semanticMarkup.markupElement.description.model"
	xml-mapping-metadata-complete="true">
    
    <xml-schema element-form-default="QUALIFIED" namespace="http://www.nexml.org/2009">
        <xml-ns prefix="nex" namespace-uri="http://www.nexml.org/2009" />
    </xml-schema>
    
    <java-types>
		<!-- xml-accessor-type="NONE" is necessary, because phenoscape format contains an own meta tag, which would automatically be
		tried to mapped to the meta field contained in DescriptionsFile, to avoid this, automatic mappings are turned off -->
		<java-type name="DescriptionsFile" xml-accessor-type="NONE">
			<xml-root-element name="nexml"/>
            <java-attributes>
                <xml-element java-attribute="meta" xml-path="metaCharaParser" type="semanticMarkup.markupElement.description.model.Meta"/>
				<xml-element java-attribute="treatmentRoot" xml-path="." type="semanticMarkup.markupElement.description.model.TreatmentRoot" />
            </java-attributes>
        </java-type>
		<java-type name="semanticMarkup.markupElement.description.model.Meta">
            <java-attributes>
				<xml-element java-attribute="glossaryType" xml-path="glossaryType/text()" />
				<xml-element java-attribute="glossaryVersion" xml-path="glossaryVersion/text()" />
				<xml-element java-attribute="charaparserVersion" xml-path="charaparserVersion/text()" />
            </java-attributes>
        </java-type>
		<java-type name="TreatmentRoot">
            <java-attributes>
				<xml-element java-attribute="descriptions" xml-path="/nex:characters/nex:format/nex:states/nex:state" 
				type="semanticMarkup.markupElement.description.model.Description" container-type="java.util.List" />
				<xml-element java-attribute="descriptions" xml-path="/nex:characters/nex:format/nex:char" 
				type="semanticMarkup.markupElement.description.model.Description" container-type="java.util.List" />
            </java-attributes>
        </java-type>
        <java-type name="Description">
            <java-attributes>			
                <xml-element java-attribute="text" xml-path="@label"/>
				<xml-element java-attribute="statements" xml-path="meta/statement/" type="semanticMarkup.markupElement.description.model.Statement" container-type="java.util.List"/>
            </java-attributes>
        </java-type>
		<java-type name="Statement">
            <java-attributes>			
                <xml-element java-attribute="text" xml-path="@text"/>
				<xml-element java-attribute="structures" xml-path="structure/" type="semanticMarkup.markupElement.description.model.Structure" container-type="java.util.List"/>
				<xml-element java-attribute="relations" xml-path="relation/" type="semanticMarkup.markupElement.description.model.Relation" container-type="java.util.List"/>
            </java-attributes>
        </java-type>
    </java-types>
</xml-bindings>

